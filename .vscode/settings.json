{   
    "deno.enable": true,
    "deno.enablePaths": ["tools/"],
    "deno.config": "./deno.jsonc",
    "editor.tabSize": 2,
    "editor.detectIndentation": false,
    
    "[typescript]": {
        "editor.defaultFormatter": "denoland.vscode-deno",
        "editor.formatOnSave": true
    },
    
    "[json]": {
        "editor.formatOnSave": true
    },

    "[c]": {
        "editor.wordBasedSuggestions": "off",
        "editor.suggest.insertMode": "replace",
        "editor.semanticHighlighting.enabled": true,
        "editor.formatOnSave": true,
        "editor.insertSpaces": true,
        "editor.detectIndentation":false
    },

    "[linkerscript]": {
        "editor.suggest.insertMode": "replace",
        "editor.formatOnSave": true,
        "editor.insertSpaces": true,
        "editor.detectIndentation":false
    },

    "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, ColumnLimit: 1000 }",
    "files.exclude": {
        "tools/agbcc": true,
        "*.sav": true,
        "*.elf": true,
        "graphics/**/*.{4bpp,lz,gbapal}": true,
        "sprites/**/*.{4bpp,lz,gbapal}": true,
        "**/*.{o,d}": true,
        "baserom.gba": true,
        "src/**/*.s": { "when": "$(basename).c" },
        "sound/songs/midi/*.s": false,
    },
    "files.associations": {
        "*.ino": "cpp",
        "*.tsx": "typescriptreact",
        "*.s": "arm",
        "*.inc": "arm",
        "*.h": "c",
        "hooks": "plaintext",
        "bytereplacement": "plaintext",
        "repoints": "plaintext",
        "routinepointers": "plaintext",
        "**/linker/*.txt": "linkerscript"
    }
}